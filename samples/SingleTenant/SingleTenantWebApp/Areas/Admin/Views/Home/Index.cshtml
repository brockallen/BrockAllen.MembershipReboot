@{
    ViewBag.Title = "Index";
}

<h2>Accounts</h2>
<table>
    <thead>
        <tr>
            <th>Username</th>
            <th>Tenant</th>
            <th>Email</th>
            <th>Created</th>
            <th>Verified</th>
            <th>Login Allowed</th>
            <th>Account Closed</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            Guid id = item.ID;
            string name = item.Username;
            <tr>
                <td>@Html.ActionLink(name, "Detail", new { id = id })</td>
                <td>@item.Tenant</td>
                <td>@item.Email</td>
                <td>@item.Created</td>
                <td>@item.IsAccountVerified</td>
                <td>@item.IsLoginAllowed</td>
                <td>@item.IsAccountClosed</td>
            </tr>
        }
    </tbody>
</table>
